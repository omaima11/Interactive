<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.omaima.interactive_class">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.Camera2"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic5"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IC"
            android:label="@string/title_activity_ic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".setting"
            android:label="الاعدادات" />
        <activity
            android:name=".record"
            android:label="التسجيلات" />
        <activity
            android:name=".lab"
            android:label="المكتبة" />
        <activity
            android:name=".chat"
            android:label="الدردشة" />
        <activity
            android:name=".homework"
            android:label="الواجبات" />
        <activity
            android:name=".votting"
            android:label="نظام التصويت" />
        <activity
            android:name=".hand"
            android:label="رفع اليد" />
        <activity
            android:name=".exam"
            android:label="الاختبارات" />
        <activity
            android:name=".attendance"
            android:label="تسجيل الحضور" />
        <activity android:name=".manager" />
        <activity
            android:name=".qustion"
            android:label="الاسئلة" />
        <activity android:name=".enter_student" />
    </application>

</manifest>